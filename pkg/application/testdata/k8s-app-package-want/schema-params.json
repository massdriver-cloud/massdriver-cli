{
    "$id": "https://schemas.massdriver.cloud/schemas/bundles/my-test-app/schema-params.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "",
    "name": "my-test-app",
    "properties": {
        "autoscaling": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "default": false,
                    "type": "boolean"
                },
                "maxReplicas": {
                    "default": 2,
                    "type": "integer"
                },
                "minReplicas": {
                    "default": 1,
                    "type": "integer"
                },
                "targetCPUUtilizationPercentage": {
                    "default": 90,
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "envs": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "image": {
            "additionalProperties": false,
            "properties": {
                "repository": {
                    "type": "string"
                },
                "sha": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ingress": {
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "host": {
                    "type": "string"
                },
                "path": {
                    "default": "/",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "default": "default",
            "type": "string"
        },
        "port": {
            "type": "integer"
        },
        "resource_requests": {
            "additionalProperties": false,
            "properties": {
                "cpu": {
                    "type": "string"
                },
                "memory": {
                    "type": "string"
                }
            },
            "type": "object"
        }
    }
}
